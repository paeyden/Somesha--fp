# Backend environment variables (example)
# Copy to `.env` and fill values for your environment.

# MongoDB connection string (local or Atlas). Common aliases supported: MONGO_URI, MONGODB_URI, DATABASE_URL
MONGO_URI=your_mongodb_connection_string_here

# JWT secret used to sign tokens (replace in production)
JWT_SECRET=change_me_to_a_long_random_secret

# Port for the backend server (optional)
PORT=your_desired_port_number_here  

# Environment (development|production)
NODE_ENV=your_environment_here

# Optional: enable verbose request logging when NODE_ENV=development
# Example: set NODE_ENV=development before starting server to enable morgan logs
